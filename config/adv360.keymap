#include <dt-bindings/zmk/stp.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    behaviors {
        #include "macros.dtsi"
      #include "version.dtsi"

        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <175>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
&kp EQUAL  &kp N1     &kp N2         &kp N3    &kp N4    &kp N5  &kp F1                                                  &kp F4     &kp N6  &kp N7    &kp N8     &kp N9   &kp N0     &kp MINUS
&kp TAB    &kp Q      &kp W          &kp E     &kp R     &kp T   &kp F2                                                  &kp F5     &kp Y   &kp U     &kp I      &kp O    &kp P      &kp FSLH
&kp ESC    &kp A      &kp S          &kp D     &kp F     &kp G   &kp F3    &kp LCTRL  &kp LALT      &kp RALT  &kp RCTRL  &kp F6     &kp H   &kp J     &kp K      &kp L    &kp SEMI   &kp MINUS
&kp LSHFT  &kp Z      &kp X          &kp C     &kp V     &kp B                        &to 3         &kp F7                          &kp N   &kp M     &kp COMMA  &kp DOT  &kp SQT    &kp RSHFT
&mo 2      &kp GRAVE  &kp BACKSLASH  &kp LBKT  &kp RBKT          &kp BSPC  &kp DEL    &kp LWIN      &kp F8    &kp ENTER  &kp SPACE          &kp LEFT  &kp DOWN   &kp UP   &kp RIGHT  &mo 2
            >;
        };

        keypad {
            display-name = "Kp";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans                                      &trans  &trans  &trans  &trans  &trans  &trans    &trans
&trans  &kp Q   &kp W   &kp F   &kp P   &kp K   &trans                                      &trans  &kp Y   &kp G   &kp L   &kp R   &kp SEMI  &trans
&trans  &kp A   &kp O   &kp E   &kp U   &kp I   &trans  &trans  &trans      &trans  &trans  &trans  &kp D   &kp H   &kp T   &kp N   &kp S     &trans
&trans  &kp Z   &kp X   &kp C   &kp V   &kp B                   &trans      &trans                  &kp J   &kp M   &trans  &trans  &trans    &trans
&trans  &trans  &trans  &trans  &trans          &trans  &trans  &trans      &trans  &trans  &trans          &trans  &trans  &trans  &trans    &trans
            >;
        };

        fn {
            display-name = "Fn";
            bindings = <
&trans  &kp F1      &kp F2        &kp F3      &kp F4        &kp F5         &tog 1                                      &mo 3   &kp F6          &kp F7   &kp F8    &kp F9         &kp F10          &trans
&trans  &kp F11     &kp F12       &none       &none         &tog 1         &trans                                      &trans  &none           &none    &none     &none          &kp PRINTSCREEN  &trans
&trans  &bl BL_INC  &kp C_PREV    &kp C_PP    &kp C_NEXT    &kp C_BRI_UP   &trans  &trans  &trans      &trans  &trans  &trans  &kp CAPS        &kp INS  &kp HOME  &kp PG_UP      &kp SCROLLLOCK   &trans
&trans  &bl BL_DEC  &kp C_VOL_DN  &kp C_MUTE  &kp C_VOL_UP  &kp C_BRI_DEC                  &trans      &trans                  &kp RS(KP_NUM)  &kp DEL  &kp END   &kp PAGE_DOWN  &kp PAUSE_BREAK  &trans
&trans  &trans      &trans        &trans      &trans                       &trans  &trans  &trans      &trans  &trans  &trans                  &trans   &trans    &trans         &trans           &trans
            >;
        };

        mod {
            display-name = "Mod";
            bindings = <
&none           &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &none                                                  &trans           &none  &none       &none       &none  &none  &none
&none           &none         &none         &none         &none         &none         &bootloader                                            &bootloader      &none  &none       &none       &none  &none  &none
&studio_unlock  &none         &none         &none         &none         &none         &none        &none  &none      &bt BT_CLR  &none       &stp STP_BAT     &none  &none       &none       &none  &none  &none
&none           &none         &none         &none         &macro_ver    &none                             &none      &none                                    &none  &none       &none       &none  &none  &none
&none           &none         &none         &none         &none                       &none        &none  &none      &none       &bl BL_TOG  &rgb_ug RGB_TOG         &bl BL_INC  &bl BL_DEC  &none  &none  &none
            >;
        };

        extra1 {
            display-name = "Red";
            status = "reserved";
        };

        extra2 {
            display-name = "Purple";
            status = "reserved";
        };

        extra3 {
            display-name = "Cyan";
            status = "reserved";
        };

        extra4 {
            display-name = "Yellow";
            status = "reserved";
        };
    };
};
